[Unit]
Description=Append SteamOS info to kernel log
After=sysinit.target

[Service]
Type=oneshot
RemainAfterExit=true
StandardOutput=file:/dev/kmsg
ExecStart=/usr/bin/steamos-dump-info

[Install]
WantedBy=basic.target
